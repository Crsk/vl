<UserControl x:Class="_vistalibre.items.ItemValor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:_vistalibre.items"
             mc:Ignorable="d" >
    <Grid Background="White" Margin="8">
        <Border BorderThickness="2" BorderBrush="#FFD2D2D2">
            <StackPanel Orientation="Horizontal">
                <Label x:Name="lbNombre" Content="Costo viaje:"/>
                <Label x:Name="lbValor" Content="$20.000"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
